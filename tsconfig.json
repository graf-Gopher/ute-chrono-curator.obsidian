{
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/ute-chrono-curator.obsidian",
    "target": "es2022",
    "module": "esnext",
    "lib": [
      "es2022",
    ],
    "paths": {
      "@home/*": [
        "*"
      ],
      "@interfaces/*": [
        "src/interfaces/*"
      ],
      "@components/*": [
        "src/ui/components/*"
      ],
    },
    "importHelpers": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "strict": true,
    "skipLibCheck": true,
    "removeComments": true,
    "sourceMap": true,
    "declaration": true,
    "moduleResolution": "node",
  },
  "ts-node": {
    "require": [
      "tsconfig-paths/register"
    ],
    "compilerOptions": {
      "module": "commonjs"
    }
  }
}